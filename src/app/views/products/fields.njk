<div class="item">
  <div class="field-label">Nome</div>
  <div>
    <input 
      type="text"
      name="name"
      placeholder="Nome do produto"
      value="{{product.name}}"
    >
  </div>
</div>

<div class="item">
  <div class="field-label">Categoria</div>
  <div>
    <select name="category_id">
      {% for category in categories %}
        <option value="{{category.id}}"{% if product.category_id == category.id %} selected {% endif %}>{{ category.name }}</option>
      {% endfor%}
    </select>
  </div>
</div>

<div class="item">
  <div class="field-label">Descrição</div>
  <div>
    <textarea 
      name="description" 
      cols="30" 
      rows="10"
      placeholder="Descriçao do produto"
    >{{product.description}}</textarea>
  </div>
</div>

<div class="item">
  <div class="field-label">Preço</div>
  <div>
    <input
      type="text"
      name="price"
      placeholder="Preço do produto"
      value="{{product.price}}"
      onkeydown="Mask.apply(this, 'formatBRL')"
    >
  </div>
</div>

<div class="item">
  <div class="field-label">Quantidade</div>
  <div>
    <input 
      type="number" 
      name="quantity"
      placeholder="Estoque Disponível"
      value="{{product.quantity}}"
    >
  </div>
</div>

<div class="item">
  <div class="field-label">Imagem do produto</div>
  <div class="images">
    <div class="image-upload">
      <input 
        type="file" 
        name="image" 
        id="image-input" 
        accept="image/*"
        onchange="ImageUpload.handleFileInput(event)"
      >
    </div>
    <div id="image-preview">
      {% if productImage %}
        <div class="photo" id={{productImage.id}}>
          <img src="{{productImage.src}}" alt="{{productImage.name}}">
          <i
            class="material-icons"
            onclick="ImageUpload.removeOldFile(event)"
          >
            close
          </i>
        </div>
        <input type="hidden" name="removed_files">
      {% endif %}
    </div>
  </div>

</div>